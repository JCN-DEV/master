<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity HrEmpBankAccountInfo.
    -->
    <changeSet id="20160329125500" author="jhipster">
        <createTable tableName="hr_emp_bank_account_info">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="account_name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="account_number" type="varchar(255)"/>
            <column name="branch_name" type="varchar(255)"/>
            <column name="description" type="varchar(255)"/>
            <column name="salary_account" type="bit">
                <constraints nullable="false" />
            </column>
            <column name="active_status" type="bit">
                <constraints nullable="false" />
            </column>
            <column name="log_id" type="bigint"/>
            <column name="log_status" type="bigint"/>
            <column name="log_comments" type="varchar(255)"/>
            <column name="create_date" type="date"/>
            <column name="create_by" type="bigint"/>
            <column name="update_date" type="date"/>
            <column name="update_by" type="bigint"/>
            <column name="employee_info_id" type="bigint"/>
            <column name="bank_name_id" type="bigint"/>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="employee_info_id"
                                 baseTableName="hr_emp_bank_account_info"
                                 constraintName="fk_hrbankaccc_empl_id"
                                 referencedColumnNames="id"
                                 referencedTableName="hr_employee_info"/>

        <addForeignKeyConstraint baseColumnNames="bank_name_id"
                                 baseTableName="hr_emp_bank_account_info"
                                 constraintName="fk_hrbankacc_bank_id"
                                 referencedColumnNames="id"
                                 referencedTableName="misc_type_setup"/>

    </changeSet>
</databaseChangeLog>
