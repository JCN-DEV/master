<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity HrEmpPromotionInfo.
    -->
    <changeSet id="20160122121050" author="jhipster">
        <createTable tableName="hr_emp_promotion_info">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="institute_from" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="institute_to" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="department_from" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="department_to" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="designation_from" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="designation_to" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="payscale_from" type="decimal(10,2)">
                <constraints nullable="false" />
            </column>
            <column name="payscale_to" type="decimal(10,2)">
                <constraints nullable="false" />
            </column>
            <column name="joining_date" type="date"/>
            <column name="promotion_type" type="varchar(255)"/>
            <column name="office_order_no" type="varchar(255)"/>
            <column name="order_date" type="date"/>
            <column name="go_date" type="date"/>
            <column name="go_doc" type="blob"/>
            <column name="go_doc_content_type" type="varchar(50)"/>
            <column name="go_doc_name" type="varchar(255)"/>
            <column name="log_id" type="bigint"/>
            <column name="log_status" type="bigint"/>
            <column name="log_comments" type="varchar(255)"/>
            <column name="active_status" type="bit">
                <constraints nullable="false" />
            </column>
            <column name="create_date" type="date"/>
            <column name="create_by" type="bigint"/>
            <column name="update_date" type="date"/>
            <column name="update_by" type="bigint"/>
            <column name="employee_info_id" type="bigint"/>
            <column name="job_category_id" type="bigint"/>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="employee_info_id"
                                 baseTableName="hr_emp_promotion_info"
                                 constraintName="fk_hremppromotion_employee_id"
                                 referencedColumnNames="id"
                                 referencedTableName="hr_employee_info"/>

        <addForeignKeyConstraint baseColumnNames="job_category_id"
                                 baseTableName="hr_emp_promotion_info"
                                 constraintName="fk_hremppromotion_jobcat_id"
                                 referencedColumnNames="id"
                                 referencedTableName="misc_type_setup"/>

    </changeSet>
</databaseChangeLog>
